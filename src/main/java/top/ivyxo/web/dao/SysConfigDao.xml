<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper动态代理参数   -->
<!--namespace:映射的接口文件全包名一致-->
<mapper namespace="top.ivyxo.web.dao.SysConfigDao">

    <resultMap id="sysConfigResultMap" type="top.ivyxo.web.entity.SySConfigDO">
        <id property="id" column="id" />
        <result property="gmtCreate"           column="gmt_create" />
        <result property="gmtModified"         column="gmt_modified" />
        <result property="remark"              column="remark" />
        <!--以上为公用属性-->
        <result property="sysKey"              column="sys_key"/>
        <result property="sysValue"            column="sys_value"/>
        <result property="isUse"              column="is_use"/>
        <result property="isDel"              column="is_del"/>
    </resultMap>

    <sql id="view_columns">
        id,
        gmt_create,
        gmt_modified,
        remark,
        sys_key,
        sys_value,
        is_use,
        is_del
    </sql>

    <sql id="tbl_columns">
        gmt_create,
        gmt_modified,
        remark,
        sys_key,
        sys_value,
        is_use,
        is_del
    </sql>

    <select id="selectById" parameterType="Long" resultMap="sysConfigResultMap">
        select
        <include refid="view_columns"/>
        from sys_config where id = #{id}
    </select>

    <select id="selectByKey" parameterType="String" resultMap="sysConfigResultMap">
        select
        <include refid="view_columns"/>
        from sys_config where is_del != 1 AND sys_key = #{key}
    </select>

    <select id="listByKey" parameterType="String" resultMap="sysConfigResultMap">
        select
        <include refid="view_columns"/>
        FROM sys_config WHERE is_del != 1 AND sys_key LIKE '#{key}%'
    </select>

    <!-- 插入表中有自增id时,设置useGeneratedKeys="true",keyProperty="id"可以获取表记录添加后的自增Id   -->
    <insert id="insert" parameterType="top.ivyxo.web.entity.SySConfigDO" useGeneratedKeys="true" keyProperty="id">
        insert into sys_config (
        <include refid="tbl_columns"/>
        ) values (
        #{gmtCreate},
        #{gmtModified},
        #{sysKey},
        #{sysValue},
        #{use},
        #{del}
        )
    </insert>

    <update id="update" parameterType="top.ivyxo.web.entity.SySConfigDO">
        update sys_config set
        gmt_modified = now()
        <if test="remark != null">
            ,remark = #{remark}
        </if>

        <if test="sysValue != null">
            ,sys_value = #{sysValue}
        </if>

        <if test="use != null">
            ,is_use = #{use}
        </if>

        <if test="del != null">
            ,is_del = #{del}
        </if>

        where id = #{id} or sys_key = #{sysKey}
    </update>

</mapper>
