<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mapper动态代理参数   -->
<!--namespace:映射的接口文件全包名一致-->
<mapper namespace="top.ivyxo.web.dao.UUserDao">

    <resultMap id="userResultMap" type="top.ivyxo.web.entity.UUserDO">
        <id property="id" column="id" />
        <result property="gmtCreate"           column="gmt_create" />
        <result property="gmtModified"         column="gmt_modified" />
        <result property="remark"              column="remark" />
        <!--以上为公用属性-->
        <result property="authId"              column="auth_id"/>
        <result property="name"                column="name"/>
        <result property="account"             column="account"/>
        <result property="password"            column="password"/>
        <result property="sex"                 column="sex"/>
        <result property="birthday"            column="birthday"/>
        <result property="avatarUrl"           column="avatar_url"/>
        <result property="email"               column="email"/>
        <result property="wechatAccount"       column="wechat_account"/>
    </resultMap>

    <sql id="view_columns">
        id,
        gmt_create,
        gmt_modified,
        remark,
        auth_id,
        name,
        account,
        password,
        sex,
        birthday,
        avatar_url,
        email,
        wechat_account
    </sql>

    <sql id="tbl_columns">
        gmt_create,
        gmt_modified,
        auth_id,
        name,
        account,
        password
    </sql>

    <!-- 插入表中有自增id时,设置useGeneratedKeys="true",keyProperty="id"可以获取表记录添加后的自增Id   -->
    <insert id="insert" parameterType="top.ivyxo.web.entity.UUserDO" useGeneratedKeys="true" keyProperty="id">
        insert into u_user (
            <include refid="tbl_columns"/>
        ) values (
            #{gmtCreate},
            #{gmtModified},
            #{authId},
            #{name},
            #{account},
            #{password}
        )
    </insert>

    <select id="selectById" parameterType="Long" resultMap="userResultMap">
        select
            <include refid="view_columns"/>
        from u_user where id = #{id}
    </select>

    <select id="selectByAccount" parameterType="String" resultMap="userResultMap">
        select
            <include refid="view_columns"/>
        from u_user where account = #{account}
    </select>

    <update id="update" parameterType="top.ivyxo.web.entity.UUserDO">
        update u_user set
            gmt_modified = now()
        <if test="authId != null">
            ,auth_id = #{authId}
        </if>
        <if test="name != null and name != ''">
            ,name = #{name}
        </if>
        <if test="password != null and password != ''">
            ,password = #{password}
        </if>
        <if test="sex != null and sex > 0">
            ,sex = #{sex}
        </if>
        <if test="birthday != null">
            ,birthday = #{birthday}
        </if>
        <if test="avatarUrl != null and avatarUrl != ''">
            ,avatar_url = #{avatarUrl}
        </if>
        <if test="email != null and email != ''">
            ,email = #{email}
        </if>
        <if test="wechatAccount != null and wechatAccount != ''">
            ,wechat_account = #{wechatAccount}
        </if>
        where id = #{id} or account = #{account}
    </update>


</mapper>
